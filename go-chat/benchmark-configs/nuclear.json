{
  "test_name": "nuclear_performance",
  "description": "Maximum stress test - push to absolute limits",
  "server_startup_timeout": 15,
  "tests": {
    "connection_test": {
      "enabled": true,
      "target_connections": 25000,
      "batch_size": 100,
      "connection_timeout": 3.0,
      "failure_threshold": 0.4
    },
    "message_test": {
      "enabled": true,
      "target_multiplier": 500,
      "batch_size": 5000,
      "message_size_multiplier": 15,
      "error_threshold": 1000
    },
    "endurance_test": {
      "enabled": true,
      "duration": 60,
      "checkpoint_interval": 10,
      "messages_per_batch": 1000
    }
  },
  "reporting": {
    "progress_interval": 2000,
    "save_raw_data": true,
    "generate_charts": true
  }
}
